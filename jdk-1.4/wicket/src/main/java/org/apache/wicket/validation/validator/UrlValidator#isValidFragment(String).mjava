	/**
	 * Returns true if the given fragment is null or fragments are allowed.
	 * 
	 * @param fragment
	 *            Fragment value to validate.
	 * @return true if fragment is valid.
	 */
	protected boolean isValidFragment(String fragment)
	{
		if (fragment == null)
		{
			return true;
		}

		return isOff(NO_FRAGMENTS);
	}

