    /**
     * Change the style with every other row
     * 
     * @see PageableListView#populateItem(ListItem)
     * @param listItem
     */
    protected void populateItem(final ListItem listItem)
    {
        listItem.add(
                new AttributeModifier(
                        "class",
                        new Model((listItem.getIndex() % 2) == 0 ? "even" : "odd")));
        
    }

