	/**
	 * Called by SortableListViewHeader and may be subclassed for company
	 * standards.
	 * 
	 * @param tag
	 *            component tag
	 * @param style
	 *            CSS style
	 */
	protected void handleComponentTag(final ComponentTag tag, final String style)
	{
		if (style != null)
		{
			tag.put("class", style);
		}
	}

