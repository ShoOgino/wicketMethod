    /**
     * Method to reset all of the selectable letters at the start of a game.
     */
    public void resetLetters() {
        for ( int i = 0; i < 26; i++ ) {
            char ch = (char)('a' + i);
            SelectableLetterLink link = (SelectableLetterLink)get("letter_" + ch);
            link.setEnabled(true);
        }
    }

