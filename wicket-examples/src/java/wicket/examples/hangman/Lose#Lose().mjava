	/**
	 * Create the lose page and its associated components.
	 */
	public Lose()
	{
		new Label(this, "currentWord", getGame().getWord().asString());
		new Link(this, "playAgain")
		{
			@Override
			public void onClick()
			{
				getGame().newGame();
				setResponsePage(new Guess());
			}
		};
	}

