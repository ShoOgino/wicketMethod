		/**
		 * Called when adding a new todo item was canceled. Hides the add form
		 * and displays the add link.
		 * 
		 * @param target
		 *            the request target.
		 */
		void onCancelTodo(final AjaxRequestTarget target)
		{
			// toggle the visibility
			linkVisible = true;

			// repaint the panel.
			target.addComponent(this);
		}

