		/**
		 * Called then the add link was clicked, shows the form, and hides the
		 * link.
		 * 
		 * @param target
		 *            the request target.
		 */
		void onShowForm(final AjaxRequestTarget target)
		{
			// toggle the visibility
			linkVisible = false;

			// redraw the add container.
			target.addComponent(this);
		}

