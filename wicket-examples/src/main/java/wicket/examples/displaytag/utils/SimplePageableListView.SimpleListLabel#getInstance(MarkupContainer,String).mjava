		/**
		 * 
		 * @param parent
		 * @param id
		 * @return Label
		 */
		public static Label getInstance(final MarkupContainer parent, final String id)
		{
			Label label = idToLabel.get(id);
			if (label == null)
			{
				label = new Label(parent, id);
				idToLabel.put(id, label);
			}

			return label;
		}

