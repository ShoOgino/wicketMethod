	/**
	 * Set the locale for this session.
	 * 
	 * @param locale
	 *            New locale
	 */
	public Session setLocale(final Locale locale)
	{
		if (locale == null)
		{
			throw new IllegalArgumentException("Argument 'locale' must not be null");
		}
		if (!Objects.equal(this.locale, locale))
		{
			dirty();
		}
		this.locale = locale;
		return this;
	}

