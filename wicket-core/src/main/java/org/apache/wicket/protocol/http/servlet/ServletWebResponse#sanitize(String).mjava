	/**
	 * Cleans the provided input (header name or value) from malicious characters.
	 * 
	 * @param input
	 *            the string to sanitize
	 * @return the sanitized string
	 */
	String sanitize(final String input)
	{
		String output = input.replace('\n', ' ').replace('\r', ' ');
		return output;
	}

