	/**
	 * Reset the request back to a default state.
	 * @param locale 
	 */
	public void initialize(Locale locale)
	{
		authType = null;
		method = "post";
		cookies.clear();
		setDefaultHeaders(locale);
		path = null;
		url = null;
		characterEncoding = "UTF-8";
		parameters.clear();
		attributes.clear();
		post.reset();
	}

