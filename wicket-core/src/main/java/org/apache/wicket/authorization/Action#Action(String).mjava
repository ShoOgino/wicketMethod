	/**
	 * Construct.
	 * 
	 * @param name
	 *            The name of this action for debug purposes
	 */
	public Action(final String name)
	{
		super(name);
		if (Strings.isEmpty(name))
		{
			throw new IllegalArgumentException(
				"Name argument may not be null, whitespace or the empty string");
		}

		this.name = name;
	}

