	/**
	 * {@inheritDoc}
	 */
	@Override
	public void onComponentTag(Component component, ComponentTag tag)
	{
		if (tag.isOpen() == false)
		{
			throw new MarkupException(
				"The border tag must be an open tag. Open-close is not allowed: " + tag.toString());
		}

		super.onComponentTag(component, tag);
	}

