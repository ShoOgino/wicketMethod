	/**
	 * Handle the container's body.
	 * 
	 * @param markupStream
	 *            The markup stream
	 * @param openTag
	 *            The open tag for the body
	 * @see org.apache.wicket.Component#onComponentTagBody(MarkupStream, ComponentTag)
	 */
	@Override
	public final void onComponentTagBody(final MarkupStream markupStream, final ComponentTag openTag)
	{
		checkComponentTag(openTag, "textarea");

		String value = getValue();
		if (value != null)
		{
			if (value.startsWith("\n"))
			{
				value = "\n" + value;
			}
			else if (value.startsWith("\r\n"))
			{
				value = "\r\n" + value;
			}
			else if (value.startsWith("\r"))
			{
				value = "\r" + value;
			}
		}
		replaceComponentTagBody(markupStream, openTag, value);
	}

