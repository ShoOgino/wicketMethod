	/**
	 * Constructor
	 * 
	 * @param markup
	 *            List of markup elements
	 */
	public MarkupStream(final IMarkupFragment markup)
	{
		if (markup == null)
		{
			throwMarkupException("Failed to find markup.");
		}

		this.markup = markup;

		if (markup.size() > 0)
		{
			current = get(currentIndex);
		}
	}

