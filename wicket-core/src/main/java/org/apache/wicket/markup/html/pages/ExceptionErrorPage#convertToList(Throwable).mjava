	/**
	 * @param throwable
	 * @return xxx
	 */
	private List<Throwable> convertToList(final Throwable throwable)
	{
		List<Throwable> al = new ArrayList<Throwable>();
		Throwable cause = throwable;
		al.add(cause);
		while (cause.getCause() != null && cause != cause.getCause())
		{
			cause = cause.getCause();
			al.add(cause);
		}
		return al;
	}

