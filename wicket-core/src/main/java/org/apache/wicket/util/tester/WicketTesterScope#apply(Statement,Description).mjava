	@Override
	public Statement apply(final Statement base, Description description)
	{
		return new Statement()
		{
			@Override
			public void evaluate() throws Throwable
			{
				tester = create();
				try
				{
					base.evaluate();
				}
				finally
				{
					tester.destroy();
					tester = null;
				}
			}
		};
	}

