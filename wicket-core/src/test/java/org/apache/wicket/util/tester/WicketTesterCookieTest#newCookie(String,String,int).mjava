	/**
	 * creates a new cookie with maxAge set
	 *
	 * @param name
	 *            name
	 * @param value
	 *            value
	 * @param maxAge
	 *            maxAge
	 * @return a cookie
	 */
	private static Cookie newCookie(String name, String value, int maxAge)
	{
		Cookie cookie = new Cookie(name, value);
		cookie.setMaxAge(maxAge);
		return cookie;
	}

