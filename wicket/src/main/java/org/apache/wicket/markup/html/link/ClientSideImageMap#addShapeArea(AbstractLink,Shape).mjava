    /**
     * Adds an area defined by a shape object.
     *
     * @param link  the link
     * @param shape the shape
     * @return this
     */
    public ClientSideImageMap addShapeArea(AbstractLink link, Shape shape)
    {
        add(link);
        areas.add(new Area(link, shapeCoordinates(shape), POLYGON));
        return this;
    }

