	/**
	 * helper
	 * 
	 * @param url
	 * @param first
	 * @param key
	 * @param value
	 */
	private void appendToQueryString(AppendingStringBuffer url, boolean first, final String key,
		final String value)
	{
		url.append(first ? '?' : '&');
		url.append(key);
		url.append('=');
		url.append(urlEncodeQueryComponent(value));
	}

