	/**
	 * Does a URLEncoder.encode() in UTF-8
	 * 
	 * @param value
	 *            value to be encoded
	 * @return encoded value
	 */
	public static String encode(String value)
	{
		try
		{
			return URLEncoder.encode(value, "UTF-8");
		}
		catch (UnsupportedEncodingException e)
		{
			throw new WicketRuntimeException(e);
		}
	}

