		/**
		 * Stops the worker thread.
		 */
		public void stop()
		{
			stop = true;

			// Block the calling thread until this thread has really stopped running
			while (stop)
			{
				try
				{
					Thread.sleep(getSavingThreadSleepTime());
				}
				catch (InterruptedException ignore)
				{
				}
			}
		}

