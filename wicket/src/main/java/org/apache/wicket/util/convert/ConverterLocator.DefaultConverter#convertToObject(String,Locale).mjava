		/**
		 * @see org.apache.wicket.util.convert.IConverter#convertToObject(java.lang.String,
		 *      java.util.Locale)
		 */
		public X convertToObject(String value, Locale locale)
		{
			if (value == null)
			{
				return null;
			}
			Class<X> theType = type.get();
			if ("".equals(value))
			{
				if (theType.equals(String.class))
				{
					return theType.cast("");
				}
				return null;
			}

			try
			{
				// FIXME figure out what to do here. if the object cannot be converted to the type
				// then either it becomes null or classcastexception. see WICKET-1706. */
				return (X)Objects.convertValue(value, theType);
			}
			catch (Exception e)
			{
				throw new ConversionException(e.getMessage(), e).setSourceValue(value);
			}
		}

