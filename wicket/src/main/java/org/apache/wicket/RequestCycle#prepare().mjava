	/**
	 * Prepare the request cycle.
	 */
	private void prepare()
	{
		try
		{
			getApplication().getSessionStore().onBeginRequest(getRequest());
		}
		catch (RuntimeException e)
		{
			log.error("Exception occurred during onEndRequest of the SessionStore", e);
		}
		// Event callback
		onBeginRequest();
	}

