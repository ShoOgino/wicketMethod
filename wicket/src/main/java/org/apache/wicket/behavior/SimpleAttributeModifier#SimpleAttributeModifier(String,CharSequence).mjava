	/**
	 * Construct.
	 * 
	 * @param attribute
	 *            The attribute
	 * @param value
	 *            The value
	 */
	public SimpleAttributeModifier(final String attribute, final CharSequence value)
	{
		Args.notNull(attribute, "attribute");
		Args.notNull(value, "value");
		this.attribute = attribute;
		this.value = value;
	}

