	/**
	 * Create a Item which represents an empty cell (there is no model for it in
	 * the DataProvider)
	 * 
	 * @param parent
	 *            parent
	 * 
	 * @param id
	 * @param index
	 * @return created item
	 */
	protected Item<T> newEmptyItem(WebMarkupContainer<?> parent, final String id, int index)
	{
		return new Item<T>(parent, id, index, null);
	}

