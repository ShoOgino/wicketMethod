	/**
	 * @param id
	 * @param versionNumber
	 * @param sessionDir
	 * @return The file pointing to the page
	 */
	private File getPageFile(int id, int versionNumber, File sessionDir)
	{
		return new File(sessionDir, Application.get().getApplicationKey() + "-page-" + id
				+ "-version-" + versionNumber);
	}

