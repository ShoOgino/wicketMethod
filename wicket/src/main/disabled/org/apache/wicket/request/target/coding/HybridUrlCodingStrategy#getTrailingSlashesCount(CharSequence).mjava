	/**
	 * 
	 * @param seq
	 * @return Returns the amount of trailing slashes in the given string
	 */
	private int getTrailingSlashesCount(final CharSequence seq)
	{
		int count = 0;
		for (int i = seq.length() - 1; i >= 0; --i)
		{
			if (seq.charAt(i) == '/')
			{
				++count;
			}
			else
			{
				break;
			}
		}
		return count;
	}

