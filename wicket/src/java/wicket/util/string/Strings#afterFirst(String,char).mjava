    /**
     * @param s The string
     * @param c The character
     * @return Everything after the first occurrence of the given character in s. If
     *         the character cannot be found, an empty string is returned.
     */
    public static String afterFirst(final String s, final char c)
    {
        final int index = s.indexOf(c);

        if (index == -1)
        {
            return "";
        }

        return s.substring(index + 1);
    }

