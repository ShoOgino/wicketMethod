	/**
	 * @param folder
	 *            Folder to add to path
	 * @return The path, for invocation chaining
	 */
	public IResourceFinder add(final Folder folder)
	{
		if (!folder.exists())
		{
			throw new IllegalArgumentException("Folder " + folder + " does not exist");
		}

		folders.add(folder);

		return this;
	}

