	/**
	 * @param clz
	 * @param expression
	 * @return introspected field
	 */
	private static Field findField(Class clz, String expression)
	{
		Field field = null;
		try
		{
			field = clz.getField(expression);
		}
		catch (Exception e)
		{
			log.debug("Cannot find field " + clz + "." + expression, e);
		}
		return field;
	}

