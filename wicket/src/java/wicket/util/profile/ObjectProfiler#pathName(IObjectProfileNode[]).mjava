    /**
     * gets path as a string.
     * @param path
     * @return path as a string
     */
    public static String pathName(final IObjectProfileNode[] path)
    {
        final StringBuffer s = new StringBuffer();

        for (int i = 0; i < path.length; ++i)
        {
            if (i != 0)
            {
                s.append('/');
            }

            s.append(path[i].name());
        }

        return s.toString();
    }

