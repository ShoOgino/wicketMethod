	/**
	 * Sets the given model.
	 * 
	 * @param model
	 *            the model
	 */
	public final void setModel(final IModel model)
	{
		// Detach current model
		if (this.model != null)
		{
			this.model.detach();
		}

		// Change model
		if (this.model != model)
		{
			modelChanging();
			this.model = (IModel)model;
			modelChanged();
		}
	}

