	/**
	 * Removes a shared resource.
	 *
	 * @param key
	 *            Shared resource key
	 */
	public final void remove(final String key)
	{
		ResourceState state;
		synchronized (resourceMap)
		{
			state = (ResourceState)resourceMap.get(key);
			if (state == null)
			{
				return;
			}
			resourceMap.remove(key);
		}
		state.cancel();
	}

