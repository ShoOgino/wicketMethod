	/**
	 * @param request
	 * @return The thread local map for temp page storage.
	 */
	private Map<String, Object> getStore(Request request)
	{
		Map<String, Object> map = pages.get();
		if(map == null)
		{
			map = new HashMap<String, Object>();
			pages.set(map);
		}
		return map;
	}

