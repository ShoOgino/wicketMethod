    /**
     * Return the value of the given named header.
     * 
     * @param name
     *            The header name
     * @return The value, or null
     */
    public String getHeader(final String name)
    {
        List l = (List)headers.get(name);
        if (l == null || l.size() < 1)
            return null;
        else
            return (String)l.get(0);
    }

