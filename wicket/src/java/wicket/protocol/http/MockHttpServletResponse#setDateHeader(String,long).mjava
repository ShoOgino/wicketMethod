    /**
     * Set a date header.
     * 
     * @param name
     *            The header name
     * @param l
     *            The long value
     */
    public void setDateHeader(final String name, final long l)
    {
        DateFormat df = DateFormat.getDateInstance(DateFormat.FULL);
        setHeader(name, df.format(new Date(l)));
    }

