    /**
     * Get the close tag for this tag.
     * @return Close tag for this tag
     */
    public ComponentTag closeTag()
    {
        final ComponentTag tag = new ComponentTag();

        tag.namespace = this.namespace;
        tag.name = this.name;
        tag.type = CLOSE;
        tag.text = tag.toString();
        tag.isMutable = false;

        return tag;
    }

