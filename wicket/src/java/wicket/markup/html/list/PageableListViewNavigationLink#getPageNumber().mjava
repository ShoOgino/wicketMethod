	/**
	 * Get pageNumber.
	 * 
	 * @return pageNumber.
	 */
	public final int getPageNumber()
	{
	    int idx = pageNumber;
		if (idx < 0)
		{
			idx = pageableListView.getPageCount() + idx;
		}
		
		if (idx > (pageableListView.getList().size() - 1))
		{
			idx = pageableListView.getList().size() - 1;
		}

		if (idx < 0)
		{
			idx = 0;
		}
		
		return idx;
	}

