	/**
	 * Define the maximum number of listItems to render. Default: render all.
	 * @param size Number of listItems to display
	 * @return This
	 */
	public ListView setViewSize(final int size)
	{
		this.viewSize = size;

		if (viewSize < 0)
		{
			viewSize = Integer.MAX_VALUE;
		}

		return this;
	}

