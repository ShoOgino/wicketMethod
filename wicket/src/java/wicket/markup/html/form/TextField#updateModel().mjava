    /**
	 * @see wicket.markup.html.form.AbstractTextComponent#updateModel()
	 */
	protected void updateModel()
	{
        if (type != null)
        {
            // Set model to request string converted to the appropriate type
        	setModelObject(getConverter().convert(getInput(), type));
        }
        else
        {
            // Update String model
        	super.updateModel();
        }
	}

