	/**
	 * Construct.
	 * 
	 * @param fc1
	 * @param fc2
	 */
	public EqualInputValidator(FormComponent fc1, FormComponent fc2)
	{
		if (fc1 == null)
		{
			throw new IllegalArgumentException("fc1 cannot be null");
		}
		if (fc2 == null)
		{
			throw new IllegalArgumentException("fc2 cannot be null");
		}
		comps = new FormComponent[] { fc1, fc2 };
	}

