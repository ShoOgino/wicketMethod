	/**
	 * @see wicket.Component#initModel()
	 */
	protected IModel initModel()
	{
		if (getParent() != null)
		{
			// Get form model
			final IModel model = getForm().getModel();
			if (model != null)
			{
				// Use form's model
				return model;
			}
			else
			{
				throw new WicketRuntimeException("FormComponent " + this + " and parent Form "
						+ getForm() + " cannot both have null models");
			}
		}
		return null;
	}

