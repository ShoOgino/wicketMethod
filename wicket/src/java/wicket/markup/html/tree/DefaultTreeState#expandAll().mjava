	public void expandAll() 
	{
		if (nodes.isEmpty() && nodesCollapsed == true)
		{
			// all nodes are already expanded, do nothing
		}
		else
		{
			// clear node set and set nodes policy as collapsed
			nodes.clear();
			nodesCollapsed = true;
		
			for (TreeStateListener l : listeners)
				l.allNodesCollapsed();
		}
	}

