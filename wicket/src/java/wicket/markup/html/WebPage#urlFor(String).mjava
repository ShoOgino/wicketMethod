	/**
	 * @param path
	 *            The path
	 * @return The url for the path
	 */
	public String urlFor(final String path)
	{
		String prefix = urlPrefix(getWebRequestCycle()).toString();
		if ((path == null) || (path.trim().length() == 0))
		{
			return prefix;
		}
		else
		{
			if (prefix.endsWith("/") || path.startsWith("/"))
			{
				return prefix + path;
			}

			return prefix + "/" + path;
		}
	}

