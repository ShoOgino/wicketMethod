	/**
	 * Sets the tag name.
	 * 
	 * @param name
	 *           New tag name
	 */
	public void setName(final String name)
	{
		if (isMutable)
		{
			this.name = name;
			this.nameChanged = true;
		}
		else
		{
			throw new UnsupportedOperationException("Attempt to set name of immutable tag");
		}
	}

