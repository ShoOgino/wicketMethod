	/**
	 * Counts lines between indices.
	 *
	 * @param string
	 *            String
	 * @param end
	 *            End index
	 */
	private void countLinesTo(final String string, final int end)
	{
		for (int i = lastLineCountIndex; i < end; i++)
		{
			if (string.charAt(i) == '\n')
			{
				columnNumber = 1;
				lineNumber++;
			}
			else
			{
				columnNumber++;
			}
		}

		lastLineCountIndex = end;
	}

