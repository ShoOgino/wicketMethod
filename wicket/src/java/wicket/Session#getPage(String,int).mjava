	/**
	 * Get the page with the given id.
	 * 
	 * @param pageMapName
	 *            Page map name
	 * @param id
	 *            Page id
	 * @return Page with the given id
	 */
	final Page getPage(final String pageMapName, final int id)
	{
		// This call will always mark the Page dirty
		return getPageMap(pageMapName).get(id);
	}

