	/**
	 * Construct.
	 * 
	 * @param attr
	 * @param value
	 */
	public SimpleAttributeModifier(String attr, String value) {
		if (attr == null) {
			throw new IllegalArgumentException("argument [attr] cannot be null");
		}
		if (value == null) {
			throw new IllegalArgumentException(
					"argument [value] cannot be null");
		}
		this.attr = attr;
		this.value = value;
	}

