	/**
	 * Creates a new DateTextField defaulting to using a short date pattern
	 * 
	 * @param parent
	 *            The parent
	 * @param id
	 *            The id of the text field
	 * @param model
	 *            The model
	 * 
	 * @see wicket.markup.html.form.TextField
	 */
	public static DateTextField forShortStyle(MarkupContainer parent,
			String id, IModel model) {
		return new DateTextField(parent, id, model,
				new StyleDateConverter(true));
	}

