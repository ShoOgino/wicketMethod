	@Override
	public String convertToString(final Time time, Locale locale)
	{
		if (time == null)
		{
			return null;
		}
		if (locale == null)
		{
			locale = Locale.getDefault();
		}
		DateFormat format = (DateFormat) DateFormat.getTimeInstance(DateFormat.SHORT, locale).clone();
		return format.format(time);
	}

