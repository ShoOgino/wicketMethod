	/**
	 * Checks argument is not null
	 * 
	 * @param argument
	 * @param name
	 * @throws IllegalargumentException
	 */
	public static void notNull(final Object argument, final String name)
	{
		if (argument == null)
		{
			throw new IllegalArgumentException("Argument '" + name + "' may not be null.");
		}
	}

