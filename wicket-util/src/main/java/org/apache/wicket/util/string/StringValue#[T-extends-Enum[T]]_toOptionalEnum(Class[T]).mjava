	/**
	 * Convert to enum, returning null if text is null or empty.
	 *
	 * @param eClass
	 *            enum type
	 *
	 * @return converted
	 * @throws StringValueConversionException
	 */
	public final <T extends Enum<T>> T toOptionalEnum(Class<T> eClass)
		throws StringValueConversionException
	{
		return Strings.isEmpty(text) ? null : toEnum(eClass);
	}

