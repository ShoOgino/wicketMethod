	/**
	 * Test that it reverses the items of a list while iterating on them
	 */
	@Test
	public void reverse()
	{
		List<Integer> list = new ArrayList<Integer>();
		for (int i = 0; i < 10; i++)
		{
			list.add(i);
		}

		Integer expected = 9;
		for (Integer actual : new ReverseListIterator<Integer>(list))
		{
			assertEquals(expected, actual);
			expected--;
		}
	}

