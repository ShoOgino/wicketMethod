	/**
	 * Get a status message for the given key.
	 * 
	 * @param key
	 *            message key
	 * @param locale
	 *            locale for message
	 * @return status message
	 */
	static String getStatus(String key, Locale locale)
	{
		return ResourceBundle.getBundle(UploadStatusResource.class.getName(), locale)
			.getString(key);
	}

