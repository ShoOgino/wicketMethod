	@Override
	void prepareObject() {
		ZonedDateTime modelObject = getModelObject();
		if (modelObject == null)
		{
			dateTime = null;
		}
		else
		{
			// convert date to the client's time zone if we have that info
			ZoneId zone = getClientTimeZone();
			if (zone != null)
			{
				modelObject = modelObject.withZoneSameInstant(zone);
			}
		}
	}

