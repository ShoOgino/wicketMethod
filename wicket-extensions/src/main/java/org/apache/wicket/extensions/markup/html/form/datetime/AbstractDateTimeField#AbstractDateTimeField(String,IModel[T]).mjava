	/**
	 * Construct.
	 * 
	 * @param id
	 * @param model
	 */
	public AbstractDateTimeField(final String id, final IModel<T> model)
	{
		super(id, model);

		// Create and add the date TextField
		add(dateField = newDateField(DATE, new DateModel()));
		add(timeField = newTimeField(TIME, new TimeModel()));
	}

