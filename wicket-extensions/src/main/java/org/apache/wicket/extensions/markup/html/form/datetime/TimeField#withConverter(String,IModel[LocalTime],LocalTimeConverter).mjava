	/**
	 * Creates a new TimeField using the provided converter.
	 * 
	 * @param id
	 *            The id of the text field
	 * @param model
	 *            The model
	 * @param converter
	 *            the date converter
	 * @return TimeField
	 */
	public static TimeField withConverter(String id, IModel<LocalTime> model, LocalTimeConverter converter)
