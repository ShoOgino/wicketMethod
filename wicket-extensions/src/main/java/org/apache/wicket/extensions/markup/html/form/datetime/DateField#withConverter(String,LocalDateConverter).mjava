	/**
	 * Creates a new DateField using the provided converter.
	 * 
	 * @param id
	 *            The id of the text field
	 * @param converter
	 *            the date converter
	 * @return DateField
	 */
	public static DateField withConverter(String id, LocalDateConverter converter)
	{
		return withConverter(id, null, converter);
	}

