		/**
		 * Creates a named parameter entry
		 * 
		 * @param key
		 * @param value
		 * @param type
		 */
		public NamedPair(final String key, final String value, Type type)
		{
			this.key = Args.notEmpty(key, "key");
			this.value = Args.notNull(value, "value");
			this.type = Args.notNull(type, "type");
		}

