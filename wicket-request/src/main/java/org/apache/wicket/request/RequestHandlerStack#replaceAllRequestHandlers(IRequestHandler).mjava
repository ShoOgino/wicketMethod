	/**
	 * Removes the whole {@link IRequestHandler} stack, terminates currently
	 * running {@link IRequestHandler} and executes the new
	 * {@link IRequestHandler}.
	 * 
	 * @param handler
	 */
	public void replaceAllRequestHandlers(IRequestHandler handler)
	{
		if (requestHandlers.isEmpty())
		{
			executeRequestHandler(handler);
		}
		else
		{
			throw new ReplaceHandlerException(handler, true);
		}
	}

