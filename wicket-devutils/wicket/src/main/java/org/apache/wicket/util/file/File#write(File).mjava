	/**
	 * Writes the given file to this one
	 * 
	 * @param file
	 *            The file to copy
	 * @throws IOException
	 */
	public final void write(final File file) throws IOException
	{
		final InputStream in = new BufferedInputStream(new FileInputStream(file));
		try
		{
			write(in);
		}
		finally
		{
			in.close();
		}
	}

