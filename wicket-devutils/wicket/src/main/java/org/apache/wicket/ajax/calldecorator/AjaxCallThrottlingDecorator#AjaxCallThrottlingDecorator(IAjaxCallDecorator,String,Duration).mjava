	/**
	 * Construct.
	 * 
	 * @param decorator
	 *            wrapped decorator
	 * @param id
	 *            throttle id
	 * @param delay
	 *            throttle delay
	 */
	public AjaxCallThrottlingDecorator(IAjaxCallDecorator decorator, String id, Duration delay)
	{
		super(decorator);
		if (Strings.isEmpty(id))
		{
			throw new IllegalArgumentException("id cannot be an empty string");
		}
		this.id = id;
		this.duration = delay;
	}

