	/**
	 * Record current state.
	 * 
	 * @param currentStep
	 *            step to record for undoing
	 */
	protected void record(final Node currentStep)
	{
		addStateChange(new Change()
		{
			Node keep = (Node)Objects.cloneObject(currentStep);

			public void undo()
			{
				state.setCurrentNode(keep);
			}
		});
	}

