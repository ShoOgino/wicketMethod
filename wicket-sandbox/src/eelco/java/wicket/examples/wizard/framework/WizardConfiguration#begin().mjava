	/**
	 * Start processing the wizard.
	 * 
	 * @return the first step
	 */
	public WizardState begin()
	{
		if (transitions == null)
		{
			throw new IllegalStateException("no transitions configured!");
		}
		WizardState state = newState();
		state.setCurrentNode(transitions.getFirst());
		return state;
	}

