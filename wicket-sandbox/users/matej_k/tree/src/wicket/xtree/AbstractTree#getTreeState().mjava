	/**
	 * Returns the TreeState of this tree.
	 */
	public TreeState getTreeState() 
	{
		if (state == null) 
		{	
			state = createTreeState();
			
			// add this object as listener of the state
			state.addTreeStateListener(this);
			// FIXME: Where should we remove the listener? 
		}
		return state;
	}

